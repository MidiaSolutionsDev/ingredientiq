{
  "name": "@ingredientiq/core",
  "version": "0.1.0",
  "description": "Core parsing, tokenization, and analysis utilities for IngredientIQ (shared across API and web).",
  "license": "MIT",
  "author": "Midia Solutions",
  "type": "module",

  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },

  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false,

  "scripts": {
    "build": "tsup src/index.ts --dts --format cjs,esm --sourcemap --clean",
    "dev": "vitest",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "prepare": "pnpm build"
  },

  "engines": {
    "node": ">=18.18"
  },

  "devDependencies": {
    "@types/node": "^22.7.4",
    "tsup": "^8.1.0",
    "typescript": "^5.6.3",
    "vitest": "^3.0.4"
  },

  "publishConfig": {
    "access": "public"
  },

  "repository": {
    "type": "git",
    "url": "https://github.com/midia/ingredientiq.git"
  },

  "bugs": {
    "url": "https://github.com/midia/ingredientiq/issues"
  },

  "homepage": "https://ingredientiq.example.com"
}
